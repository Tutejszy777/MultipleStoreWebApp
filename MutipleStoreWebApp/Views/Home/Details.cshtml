@model Product

@{
    ViewData["Title"] = Model.Name + " details";
}


<h2>Product Details</h2>

<div class="card mb-3" style="max-width: 800px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/images/jagermeister-photo.jpg" class="img-fluid rounded-start" alt="@Model.Name" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title">@Model.Name</h3>
                <h4 class="text-success">$@Model.Price.ToString("F2")</h4>

                <p class="card-text">
                    <strong>Description:</strong><br />
                    @Model.Description
                </p>

                <p class="card-text"><strong>Stock Quantity:</strong> @Model.StockQuantity</p>
                <p class="card-text"><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>
                <p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>
                <p class="card-text"><strong>Store:</strong> @Model.Store?.Name</p>
                <p class="card-text"><strong>Created At:</strong> @Model.CreatedAt.ToShortDateString()</p>
                <p class="card-text"><strong>Updated At:</strong> @Model.UpdatedAt.ToShortDateString()</p>

                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
