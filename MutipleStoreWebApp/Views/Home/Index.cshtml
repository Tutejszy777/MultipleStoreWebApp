@model Store

@{
    ViewData["Title"] = Model.Name;
}

<dl>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Products)
    </dt>
    <dd class="col-sm-10">
        <table class="table">
            <tr>
                <th>Products</th>
                <th>Price</th>
            </tr>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                </tr>
            }
        </table>
    </dd>
</dl>


